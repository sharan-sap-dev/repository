<mvc:View controllerName="com.hack.SemDude.controller.App"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true">

	<App>
		<u:SplitContainer id="mySplitContainer" showSecondaryContent="true" secondaryContentWidth="50px">
			<u:secondaryContent>
				<Page>
					<customHeader>
						<Bar>
							<contentMiddle>
								<core:Icon src="sap-icon://sap-logo-shape" tooltip="Start" color="#000000" class="sapUiSmallMargin" />
							</contentMiddle>

						</Bar>
					</customHeader>
					<List>
						<CustomListItem >
							<core:Icon src="sap-icon://busy" tooltip="Start" color="#000000" class="sapUiSmallMargin" />
						</CustomListItem>
						<CustomListItem >
							<core:Icon src="sap-icon://excel-attachment" color="#031E48" class="sapUiSmallMargin" />
						</CustomListItem>
						<CustomListItem >
							<core:Icon src="sap-icon://survey" color="#E69A17" class="sapUiSmallMargin" />
						</CustomListItem>
						<CustomListItem >
							<core:Icon src="sap-icon://microphone" color="#031E48" class="sapUiSmallMargin" />
						</CustomListItem>
						<CustomListItem >
							<core:Icon src="sap-icon://filter" color="#E69A17" class="sapUiSmallMargin"/>
						</CustomListItem>
					</List>
					<footer>
						<Toolbar>
							<Label textAlign="Center" text="v0.07"/>
						</Toolbar>
					</footer>
				</Page>
			</u:secondaryContent>
			<u:content>
				<Page>
					<customHeader>
						<Bar>
							<contentLeft>
								<Button icon="sap-icon://filter-analytics" press="handleToggleSecondaryContent"></Button>
							</contentLeft>
							<contentMiddle>
								<Title text="{i18n>homePageTitle}"></Title>
							</contentMiddle>
							<contentRight>
								<Button icon="sap-icon://excel-attachment" press="onUploadDialogOpen"></Button>
							</contentRight>
						</Bar>
					</customHeader>
					<content>
						<Toolbar>
							<SearchField id="idSearchField" placeholder="Search" showRefreshButton="true" liveChange=".onSearch" width="100%"/>
							<ToggleButton icon="sap-icon://microphone" pressed="false" press="onVoiceRecog"/>
						</Toolbar>
						<Table id="idDataTable" autoPopinMode="true" inset="false" items="{ path: '/Data', sorter: { path: 'Questions' } }">
							<columns>
								<Column width="12em">
									<Text text="Question"/>
								</Column>
								<Column hAlign="End" demandPopin="true">
									<Text text="Answer"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{SupplierName}"/>
										<Text text="{Width} x {Depth} x {Height} {DimUnit}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</content>
					<footer>
						<Toolbar height="40%">
							<form:SimpleForm editable="true" layout="ResponsiveGridLayout" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="true">
								<Label text="Console Log"/>
								<TextArea id="idStatusLog" value="" editable="false" rows="4" width="100%"/>
							</form:SimpleForm>
						</Toolbar>
					</footer>
				</Page>
			</u:content>
		</u:SplitContainer>
	</App>
</mvc:View>
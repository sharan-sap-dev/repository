<mvc:View controllerName="com.hack.SemDude.controller.App"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" displayBlock="true">
		<SplitApp
		id="SplitAppDemo"
		initialDetail="detail"
		initialMaster="master"
		orientationChange=".onOrientationChange">
		<detailPages>
			<Page
				id="home"
				title="Home"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				showNavButton="{device>/isPhone}" navButtonPress="handleNavButtonPress">
				<customHeader>
					<Bar>
						<contentLeft>
							<Button icon="sap-icon://sys-enter-2" type="transparent" press="onStatus"></Button>
						</contentLeft>
						<contentMiddle>
							<Title text="{i18n>homePageTitle}"></Title>
						</contentMiddle>
						<contentRight>
							<Button icon="sap-icon://excel-attachment" type="transparent" press="onUploadDialogOpen"></Button>
						</contentRight>
					</Bar>
				</customHeader>
				<content>
					<Toolbar>
						<SearchField id="idSearchField" placeholder="Search" showRefreshButton="true" liveChange=".onSearch" width="100%"/>
						<ToggleButton icon="sap-icon://microphone" pressed="false" press="onVoiceRecog"/>
					</Toolbar>
					<Table id="idDataTable" autoPopinMode="true" inset="false" items="{ path: '/Data', sorter: { path: 'Questions' } }">
						<columns>
							<Column width="12em">
								<Text text="Question"/>
							</Column>
							<Column hAlign="End" demandPopin="true">
								<Text text="Answer"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{SupplierName}"/>
									<Text text="{Width} x {Depth} x {Height} {DimUnit}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>
					<Toolbar height="40%">
						<form:SimpleForm editable="true" layout="ResponsiveGridLayout" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="true">
							<Label text="Console Log"/>
							<TextArea id="idStatusLog" value="" editable="false" rows="4" width="100%"/>
						</form:SimpleForm>
					</Toolbar>
				</footer>
			</Page>
			<Page
				id="howToUse"
				title="How To Use"
				class="sapUiStdPage"
				>
				
			</Page>
			<Page
				id="aboutUs"
				title="About Us"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				>
				
			</Page>
		</detailPages>
		<masterPages>
			<Page
				id="master"
				title="Menu"
				textAlign="Center"
				backgroundDesign= "List"
				icon="sap-icon://action"
				class="sapUiStdPage">
				<List itemPress=".onListItemPress">
					<items>
						<StandardListItem title="Home" type="Active" custom:to="home" />
						<StandardListItem title="How to use" type="Active" custom:to="howToUse" />
						<StandardListItem title="About Us" type="Active" custom:to="aboutUs" />
					</items>
				</List>
				<footer>
				<Toolbar>
				<Label class="sapUiSmallMarginBegin" text="v0.02"/>
				</Toolbar>
				</footer>
			</Page>

		</masterPages>
	</SplitApp>
</mvc:View>